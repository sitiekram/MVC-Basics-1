@model PeopleViewModel
@{
    ViewData["Title"] = "Index";
}

<div>
    <form asp-action="Index" method="post" role="form" class="form">
        @Html.AntiForgeryToken()
            <h4>Filter</h4>
            <div class="row">
                <div class="col-3">
                    <label asp-for="FilterString"></label>
                </div>
                <div class="col-9">
                    <input asp-for="FilterString" />
                </div>
            </div>
            <div class="row">
                <div>
                    <input type="submit" class="btn btn-primary btn-lg" value="Search" />
                </div>
            </div>
    </form>
</div>
<div>
    <form asp-action="CreatePerson" method="post" role="form">
        @Html.AntiForgeryToken()
        <div>
            <h3><b>Create a new car</b></h3>
            <label asp-for="FullName"></label>
            <input asp-for="FullName" />
            <span style="color:rebeccapurple" asp-validation-for="FullName"></span>
            <label asp-for="City"></label>
            <input asp-for="City" />
            <span style="color:rebeccapurple" asp-validation-for="City"></span>
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" />
            <span style="color:rebeccapurple" asp-validation-for="PhoneNumber"></span>
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span style="color:rebeccapurple" asp-validation-for="Email"></span>
         </div>
        <div>
            <input type="submit" class="btn btn-primary" name="btnCreatePerson"value="Add Person" />
        </div>
    </form>
</div>
<br />
<h2><b>List of person</b></h2>
<div class="container" style="font-size: 20px; background-color: #96D4D4">
    <div class="row" style="font-weight:bold;">
        <div class="col-1">
            Person ID
        </div>
        <div class="col-3">
            Full Name
        </div>
        <div class="col-2">
            City
        </div>
        <div class="col-2">
            Phone Number
        </div>
        <div class="col-3">
            Email
        </div>
        <div class="col-1">
            Action
        </div>
    </div>
    @foreach (var person in Model.PersonList)
    {
        <partial name="_PersonPartial" model="person" />
    }
</div>

