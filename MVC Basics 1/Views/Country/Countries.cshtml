@model IEnumerable<CountryModel>
@{
    ViewData["Title"] = "Countries";
}

<h1><b>List of Countries</b></h1>

<a asp-action="CreateCountry">Create</a>

<table class="table">
    <thead>
        <tr>
            <th> Country Code</th>
            <th>Name</th>
            <th>Continent</th>
            <th>Population</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
            <tr>
                <td>@country.Code</td>
                <td>@country.Name</td>
                <td>@country.Continent</td>
                <td>@country.Population</td>
                <td> @Html.ActionLink("Edit", "EditCountry", new { countryCode = @country.Code }) | @Html.ActionLink("Delete", "DeleteCountry", new { countryCode = @country.Code }) </td>
            </tr>
        }
    </tbody>
</table>

