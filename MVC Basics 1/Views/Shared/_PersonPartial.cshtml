@model Person

<div class="row" style="background-color: #96D4D4; font-size: 20px">
    <div class="col-1">
        @Model.PersonId
    </div>
    <div class="col-3">
        @Model.FullName
    </div>
    <div class="col-2">
        @Model.City
    </div>
    <div class="col-2">
        @Model.PhoneNumber
    </div>
    <div class="col-3">
        @Model.Email
    </div>
    <div class="col-1">
        <a href="#" onclick="location.href ='@Url.Action("DeletePerson", "People", new { id = Model.PersonId })'">Delete</a>
    </div>
</div>
